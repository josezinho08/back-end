const peso = 56
const agua_ml = peso * 35
const agua_l = agua_ml/1000
console.log ("A quantidade ideal de agua é " + agua_l + " litros")


const av1 = 10.0
const av2 = 7.0
const av3 = 4.0
const media = (av1 + av2 + av3)/3
if (media>=6.0){
    console.log ( "Aprovado")
} else {
    console.log ("Reprovado")                 
}
console.log (" A media é " + media)
